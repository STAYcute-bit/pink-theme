  color: var(--text-color) !important;
}

/* Message bubbles */
.message {
  background-color: var(--secondary-bg) !important;
  color: var(--text-color) !important;
}

/* Usernames */
.username {
  color: #e23d7f !important; /* Pinkish username color */
}

/* Button Styles */
button {
