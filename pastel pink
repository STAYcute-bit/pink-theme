/* Base Colors */
:root {
  --primary-bg: #f8e1e8; /* Pastel Pink Background */
  --secondary-bg: #fcd9e1; /* Lighter Pastel Pink */
  --text-color: #4a1d3f; /* Darker shade for text */
  --accent-color: #f3a6c4; /* Soft pink accent */
  --button-bg: #f9c9d3; /* Soft pink button */
  --button-hover-bg: #f7b0c4; /* Hover effect on buttons */
  --border-color: #f3a6c4; /* Accent border color */
}

/* Force the background of the entire body */
html, body {
  background-color: var(--primary-bg) !important;
  color: var(--text-color) !important;
}

/* Force message area background */
#chat, .chat, .messages, .message {
